<Window x:Class="PenCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenCalculator"
        mc:Ignorable="d"
        FontSize="14"
        xmlns:vm="clr-namespace:PenCalculator.ViewModels"
        xmlns:models="clr-namespace:PenCalculator.Models"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="550" Width="800"
        
        >
    <!--<Button Style="{StaticResource PrimaryButton}" Content="Добавить"  Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AddPeriodCommand}"/>-->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Command="{Binding CalculateCommand}" Width="100" Height="25"  Style="{StaticResource DangerButton}" HorizontalAlignment="Center" Content="Calculate" Margin="5,5"/>
            <Button Style="{StaticResource PrimaryButton}" Width="100" Height="25"  HorizontalAlignment="Center" Content="Добавить"  Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AddPeriodCommand}" />
            <Button Style="{StaticResource DangerButton}" Width="100" Height="25"   HorizontalAlignment="Center" Content="Удалить"    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.RemovePeriodCommand}" Margin="5,5"/>
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding PaymentPurposes, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedItem="{Binding SelectedPaymentPurposes}"
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:PaymentForPeriod}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top " Margin="5">
                        <TextBlock Text="C:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker  SelectedDate="{Binding
                                        Path=StartDate,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Text="ПО:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker  SelectedDate="{Binding
                                        Path=EndDate,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Text="Период:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DateLength}" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Размер:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding PaySizeFull, StringFormat={}{0:F2}, Mode=TwoWay}" Margin="5,0" VerticalAlignment="Center"/>
                       
                        <TextBox Text="{Binding PaySizeOnPeriodString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"   Margin="5,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Height="30">
            <TextBlock Text="Сумма:"/>
            <TextBox Text="{Binding PayTotal, StringFormat={}{0:F2}}"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Command="{Binding CalculateCommand}" Width="100" Height="25"  Style="{StaticResource DangerButton}" HorizontalAlignment="Center" Content="Calculate" Margin="5,5"/>
            <Button Style="{StaticResource PrimaryButton}" Width="100" Height="25"  HorizontalAlignment="Center" Content="Добавить"  Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AddPeriodCommand}" />
            <Button Style="{StaticResource DangerButton}" Width="100" Height="25"   HorizontalAlignment="Center" Content="Удалить"    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.RemovePeriodCommand}" Margin="5,5"/>
        </StackPanel>
    </Grid>
</Window>
