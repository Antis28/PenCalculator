<Window x:Class="PenCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenCalculator"
        mc:Ignorable="d"
        FontSize="14"
        xmlns:vm="clr-namespace:PenCalculator.ViewModels"
        xmlns:c="clr-namespace:PenCalculator.Infrastructure.Converters"
        xmlns:models="clr-namespace:PenCalculator.Models"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="550" Width="800"
        Language="ru-ru"
        Drop="SetDropCommand"
        AllowDrop="True"
        >
    <!--<Button Style="{StaticResource PrimaryButton}" Content="Добавить"  Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AddPeriodCommand}"/>-->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <c:MoneyToStringConverter x:Key="moneyToStringConverter" />
        <c:BoolToVisibleConverter x:Key="boolToVisibleConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Имя файла:" Margin="5,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding FileName, Mode=TwoWay}" MinWidth="200" Margin="5,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>

            </StackPanel>
            
            <TextBlock Text="Положено:" Margin="5,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel  Orientation="Horizontal">
                <Button Style="{StaticResource PrimaryButton}" Width="100"   HorizontalAlignment="Center" Content="Добавить"  Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AddPeriodCommand}"  Margin="5,5"/>
                <Button Style="{StaticResource DangerButton}" Width="100"    HorizontalAlignment="Center" Content="Удалить"    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.RemovePeriodCommand}" Margin="5,5"/>
                <Button Style="{StaticResource BaseStyle}" Width="100"    HorizontalAlignment="Right" Content="Сохранить"    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.SaveToFileCommand}" Margin="5,5"/>
                
            </StackPanel>
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding PaymentPurposes, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedItem="{Binding SelectedPaymentPurposes}"
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:PaymentForPeriod}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top " Margin="5">
                        <TextBlock Text="C:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker  SelectedDate="{Binding
                                        Path=StartDate,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Text="ПО:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker  SelectedDate="{Binding
                                        Path=EndDate,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Text="Период:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DateLength}" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Размер:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox  Text="{Binding PaySizeFull,Converter={StaticResource moneyToStringConverter} , Mode=TwoWay}" Margin="5,0" VerticalAlignment="Center" MinWidth="100"/>
                        <!--StringFormat={}{0:F2}-->
                        <TextBox Text="{Binding PaySizeOnPeriod,Converter={StaticResource moneyToStringConverter}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"   Margin="5,0" VerticalAlignment="Center" MinWidth="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Height="30">
            <TextBlock Text="Сумма:"/>
            <TextBox Text="{Binding PayTotal, Converter={StaticResource moneyToStringConverter}}" MinWidth="100"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <TextBlock Text="Выплачено:" Margin="5,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button Style="{StaticResource PrimaryButton}" Width="100"  HorizontalAlignment="Center" Content="Добавить"  Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AddPaidOutCommand}" Margin="5,5"/>
            <Button Style="{StaticResource DangerButton}" Width="100"   HorizontalAlignment="Center" Content="Удалить"    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.RemovePaidCommand}" Margin="5,5"/>
        </StackPanel>
        <ListBox Grid.Row="5" ItemsSource="{Binding PaidOut, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedItem="{Binding SelectedPaidOut}" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:PaymentForPeriod}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top " Margin="5">
                        <CheckBox Content="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter}, Mode=OneWay }" IsChecked="{Binding IsAllVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }" Text="C:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker 
                            Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"  
                            SelectedDate="{Binding
                            Path=StartDate,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged,
                            TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"
                                   Text="ПО:" 
                                   Margin="5,0" 
                                   VerticalAlignment="Center"/>
                        <DatePicker 
                            Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"
                            SelectedDate="{Binding
                            Path=EndDate,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged,
                            TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"
                                   Text="Период:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBlock 
                            Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"
                            Text="{Binding DateLength}" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBlock 
                            Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"
                            Text="Размер:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Visibility="{Binding IsAllVisible, Converter={StaticResource boolToVisibleConverter} }"  Text="{Binding PaySizeFull,Converter={StaticResource moneyToStringConverter} , Mode=TwoWay}" Margin="5,0" VerticalAlignment="Center" MinWidth="100"/>
                        <!--StringFormat={}{0:F2}-->
                        <TextBox Text="{Binding PaySizeOnPeriod,Converter={StaticResource moneyToStringConverter}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"   Margin="5,0" VerticalAlignment="Center" MinWidth="100"/>
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="6" Orientation="Vertical" >
            <StackPanel Orientation="Horizontal" Height="30">
                <TextBlock Text="Сумма:"/>
                <TextBox Text="{Binding PaidTotal, Converter={StaticResource moneyToStringConverter}}" MinWidth="100"></TextBox>
            </StackPanel>
            <Button Command="{Binding CalculatePaidCommand}" Width="100"   Style="{StaticResource DangerButton}" HorizontalAlignment="Center" Content="Calculate" Margin="5,5"/>
            <StackPanel Orientation="Horizontal" Height="30">
                <TextBlock Text="Разница:"/>
                <TextBox Text="{Binding DifferencePaid,Converter={StaticResource moneyToStringConverter}}"  MinWidth="100"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
