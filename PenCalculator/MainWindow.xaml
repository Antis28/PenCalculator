<Window x:Class="PenCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenCalculator"
        mc:Ignorable="d"
        FontSize="16"
        xmlns:vm="clr-namespace:PenCalculator.ViewModels"
        xmlns:models="clr-namespace:PenCalculator.Models"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        DataContext="{vm:MainViewModel}"
        Title="MainWindow" Height="550" Width="800"
        >
    <Window.Resources>
        <vm:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding Groups, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedItem="{Binding SelectedGroup}"
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:PaymentForPeriod}">
                    <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Top " Margin="5">
                        <TextBlock Text="C:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker  SelectedDate="{Binding
                                        Path=StartDate,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Text="ПО:" Margin="5,0" VerticalAlignment="Center"/>
                        <DatePicker  SelectedDate="{Binding
                                        Path=EndDate,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        TargetNullValue={x:Static System:DateTime.Now}}"/>
                        <TextBlock Text="Размер:" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding PaySizeFull, StringFormat={}{0:F2}, Mode=TwoWay}" Margin="5,0" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource PrimaryButton}" Content="Добавить" DataContext="{StaticResource MainViewModel}"   Command="{Binding AddPeriodCommand}"/>
                        <Button Style="{StaticResource DangerButton}" Content="Удалить"   DataContext="{StaticResource MainViewModel}"  Command="{Binding RemovePeriodCommand}"/>
                        <TextBox Text="{Binding PaySizeOnPeriodString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"   Margin="5,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1">
            <Button Command="{Binding CalculateCommand}" Style="{StaticResource DangerButton}" HorizontalAlignment="Center" Content="Calculate" Click="Button_Click"></Button>
            <TextBlock Text="Сумма:"/>
            <TextBox Text="{Binding PayTotal}"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Visibility="Collapsed" Orientation="Horizontal" Height="30" VerticalAlignment="Top " Margin="5">
            <Label Content="C:" Margin="5,0" VerticalAlignment="Center"/>
            <DatePicker  />
            <Label Content="ПО:" Margin="5,0" VerticalAlignment="Center"/>
            <DatePicker  />
            <Label Content="Размер:" FontSize="5" Margin="5,0" VerticalAlignment="Center"/>
            <TextBox Text="10000" Margin="5,0" VerticalAlignment="Center"/>

            <Button Content="Добавить" Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock Text="За период:" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedGroup.PaySizeOnPeriod}"/>

            <TextBlock Text="За полный месяц:" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedGroup.PaySizeFull}"/>
        </StackPanel>
    </Grid>
</Window>
